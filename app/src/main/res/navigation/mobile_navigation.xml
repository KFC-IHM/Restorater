<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.kfc.restorater.ui.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_location"
        android:name="com.kfc.restorater.ui.location.LocationFragment"
        tools:layout="@layout/fragment_location" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.kfc.restorater.ui.user.UserFragment"
        android:label="@string/user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_navigation_user_to_navigation_login"
            app:destination="@id/navigation_login" />
        <action
            android:id="@+id/action_navigation_user_to_navigation_comment_page"
            app:destination="@id/navigation_comment_page" />
    </fragment>

    <!--<fragment
        android:id="@+id/navigation_location"
        android:name="com.kfc.restorater.ui.map.MapFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_map" />-->

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kfc.restorater.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_restaurant"
            app:destination="@id/navigation_restaurant" />
    </fragment>

    <fragment
        android:id="@+id/navigation_restaurant"
        android:name="com.kfc.restorater.ui.restaurant.RestaurantPageFragment"
        android:label="Restaurant"
        tools:layout="@layout/fragment_restaurant_page" >
        <action
            android:id="@+id/action_navigation_restaurant_to_navigation_home"
            app:destination="@id/navigation_home"/>
        <action
            android:id="@+id/action_navigation_restaurant_to_navigation_comment_page"
            app:destination="@id/navigation_comment_page" />
        <action
            android:id="@+id/action_navigation_restaurant_to_post_comment"
            app:destination="@id/post_comment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_comment_page"
        android:name="com.kfc.restorater.ui.comment.CommentPageFragment"
        android:label="Comment"
        tools:layout="@layout/fragment_comment_page" >

        <action
            android:id="@+id/action_navigation_comment_page_to_navigation_user"
            app:destination="@id/navigation_user" />
    </fragment>

    <fragment
        android:id="@+id/post_comment"
        android:name="com.kfc.restorater.ui.post_comment.PostCommentFragment"
        android:label="Map"
        tools:layout="@layout/fragment_post_comment" >

    </fragment>
</navigation>