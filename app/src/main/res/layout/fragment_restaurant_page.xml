<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.kfc.restorater.ui.restaurant.RestaurantViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="RESTAURANT NAME"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurant_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#83FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="TODO DISTANCE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/restaurant_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="TODO: Map"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_info" />

        <fragment
            android:id="@+id/restaurant_comments"
            android:name="com.kfc.restorater.recyclers.restaurantComments.RestaurantCommentsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_map"
            tools:ignore="FragmentTagUsage" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>