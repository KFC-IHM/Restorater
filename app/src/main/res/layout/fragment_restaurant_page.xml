<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.kfc.restorater.ui.restaurant.RestaurantPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="RESTAURANT NAME"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurant_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#83FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_name">

            <TextView
                android:id="@+id/restaurant_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/_0_0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableEndCompat="@drawable/star_solid_small"
                android:drawablePadding="10dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/restaurant_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="@string/restaurant_distance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <fragment
            android:id="@+id/restaurant_map"
            android:name="com.kfc.restorater.ui.location.LocationFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_info"
            tools:ignore="FragmentTagUsage" />

        <fragment
            android:id="@+id/restaurant_comments"
            android:name="com.kfc.restorater.recyclers.restaurantComments.RestaurantCommentFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_map"
            tools:layout="@layout/fragment_restaurant_comment_list"
            tools:ignore="FragmentTagUsage" />


        <ImageButton
            android:id="@+id/restaurant_drive_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/car_solid"
            android:padding="10dp"
            android:background="@drawable/round"
            android:contentDescription="Open Google Maps"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>