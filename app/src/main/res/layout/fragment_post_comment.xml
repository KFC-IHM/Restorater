<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.kfc.restorater.ui.post_comment.PostCommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:id="@+id/post_comment_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/post_comment_content"
            android:autofillHints="Titre du commentaire"
            android:inputType="textCapSentences"
            android:text="@={viewmodel.commentTitle}"
            android:background="@drawable/round"/>

        <EditText
            android:id="@+id/post_comment_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/post_comment_title"
            app:layout_constraintBottom_toTopOf="@+id/submit"
            android:autofillHints="Commentaire"
            android:inputType="textCapSentences|textMultiLine"
            tools:ignore="LabelFor"
            android:text="@={viewmodel.commentBody}"
            android:background="@drawable/round"
            android:padding="5dp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/poster"
            app:layout_constraintTop_toBottomOf="@+id/post_comment_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{() -> viewmodel.postComment()}"
            android:padding="5dp"
            android:gravity="top|end" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>